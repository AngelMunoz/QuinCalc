<Page
    x:Class="QuinCalc.Views.TodoForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuinCalc.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

  <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel HorizontalAlignment="Left" Height="auto">
      <TextBlock Text="Name"/>
      <TextBox PlaceholderText="Todo's Name" Text="{x:Bind todovm.Name, Mode=TwoWay}"/>
      <TextBlock Text="Description"/>
      <TextBox PlaceholderText="Todo's Description" Text="{x:Bind todovm.Description, Mode=TwoWay}"/>
      <TextBlock Text="Due To"/>
      <DatePicker Name="DatePickerCtrl"/>
      <TextBlock Text="Is Done"/>
      <CheckBox IsChecked="{x:Bind todovm.IsDone, Mode=TwoWay}"/>
    </StackPanel>
    <Button Name="SaveTodoBtn" Click="SaveTodoBtn_Click" Content="Save Todo" Width="150" Height="45"/>
    <Button Name="CancelBtn" Click="CancelBtn_Click" Content="Cancel" Width="150" Height="45"/>
  </StackPanel>
</Page>
